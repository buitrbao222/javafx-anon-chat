<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="16.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="16.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <TextFlow textAlignment="CENTER">
            <Text fx:id="text" fontSmoothingType="LCD" text="Đang tìm người để chat...">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>
        </TextFlow>
        <HBox alignment="CENTER" spacing="16.0">
            <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#acceptMatch" prefWidth="100.0"
                    text="Chấp nhận" visible="false">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <Button fx:id="refuseButton" mnemonicParsing="false" onAction="#refuseMatch" prefWidth="100.0"
                    text="Từ chối" visible="false">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</VBox>
